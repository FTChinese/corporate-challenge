{% include "partials/header.njk" %}
<div id="headline" class="o-grid-container">
	<div class="o-grid-row">

		{% for figure in headline%}
		<div data-o-grid-colspan="12 M6">
			{% include "partials/ig-image.njk" %}
		</div>
		{% endfor%}

	</div>
</div>

<div id="top-stories" class="o-grid-container">
	<div class="top-stories__wrapper">
		{% for news in newsList %}
		<article class="top-stories__article">
			{{news}}
		</article>
		{% endfor %}
	</div>
</div>


<div id="gallery-by-year" class="o-grid-container">
	<h2>历年精彩回顾</h2>
	<div class="o-grid-row">
		{% for figure in galleryByYear %}
		<div data-o-grid-colspan="12 S6 M4">
			{% include "partials/ig-image.njk" %}
		</div>
		{% endfor %}
	</div>
</div>

{% include "partials/footer.njk" %}
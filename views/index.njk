{% extends "base.njk" %}
{% block main %}
<div id="headline" class="section o-grid-container">
	<div class="section__wrapper">
		<div class="o-grid-row">
			{% if headline.images %}
			<div data-o-grid-colspan="12 M6">
				{% for image in headline.images%}
				{% include "partials/ig-image.njk" %}
				{% endfor %}
			</div>
			{% endif %}

			{% if headline.video %}
			{% set video = headline.video %}
			<div data-o-grid-colspan="12 M6">
				{% include "partials/ig-video.njk" %}
			</div>
			{% endif %}
		</div>		
	</div>

</div>

<div id="top-news" class="section o-grid-container">
	<div class="section__wrapper">
		<div class="o-grid-row">
			<div data-o-grid-colspan="12">
				<div class="section__main">
					{% for news in newsList %}
					<article class="article">
						{{news}}
					</article>
					{% endfor %}
				</div>				
			</div>
		</div>
	</div>
</div>
{% endblock %}